---
import { getEntry } from "astro:content";
import Image from "astro/components/Image.astro";

import { cx } from "@/utils";

const settings = await getEntry("settings", "index");
---

<header class="mx-auto w-full max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
  <nav class="flex items-center justify-between">
    <a
      href="/"
      class="shadow transition hover:-rotate-3 hover:scale-[0.97] hover:shadow-sm active:scale-[0.97]"
      ><Image
        src={settings.data.logo}
        class="size-24 rounded"
        alt="The NavBar logo"
      /></a
    >
    <div class="flex gap-8 font-medium">
      <!-- <a href="/about">About</a> -->
      <a
        class={cx(
          "hover:underline",
          Astro.url.pathname.startsWith("/shows")
            ? "text-black"
            : "text-slate-500",
        )}
        href="/shows">Shows</a
      >
      <a
        class={cx(
          "hover:underline",
          Astro.url.pathname.startsWith("/suggestions")
            ? "text-black"
            : "text-slate-500",
        )}
        href="/suggestions">Suggestions</a
      >
    </div>
  </nav>
</header>
