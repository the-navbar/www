---
import type { CollectionEntry } from "astro:content";

import ShowCard from "./ShowCard.astro";

type Props = {
  shows: CollectionEntry<"shows">[];
};

const { shows } = Astro.props as Props;
---

<ul class="grid gap-x-8 gap-y-6 md:grid-cols-2 lg:grid-cols-3">
  {shows.map((show) => <ShowCard show={show} />)}
</ul>
