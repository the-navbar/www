---
type Props = {
  href: string;
};

const { href } = Astro.props as Props;
---

<a
  href={href}
  class="flex items-center gap-2 rounded-md bg-gradient-to-r from-sky-100 to-emerald-100 px-4 py-2 text-sm font-medium text-emerald-950 ring-1 ring-emerald-400 transition hover:from-sky-200 hover:to-emerald-200"
>
  <slot />
</a>
